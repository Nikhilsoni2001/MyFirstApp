<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNikhil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="18dp"
        android:src="@drawable/nikhil_soni" />

    <TextView

        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imgNikhil"
        android:text="Nikhil Soni"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHeader"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgNikhil"
        android:text="Android Developer"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOccupation"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgNikhil"
        android:text="nsoni190120001@gmail.com"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmailId"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgNikhil"
        android:text="8699333207"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNikhil"
        android:layout_margin="20dp"
        android:background="#2196f3"
        android:text="Contact me"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f44336"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>